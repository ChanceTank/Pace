{
	"name": "pace",
	"productName": "Pace",
	"description": "Personal social steward app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev-web-app": "set WEB_ONLY=true && vite --open",
		"dev-electron-app": "wait-on http://localhost:5173 && electron .",
		"dev-both-apps": "concurrently \"set WEB_ONLY=true && vite --open\" \"wait-on http://localhost:5173 && electron .\"",
		"build-test": "tsc && vite build",
		"build-release": "tsc && vite build && electron-builder",
		"compileTS": "tsc",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.563.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.24",
		"concurrently": "^9.2.1",
		"electron": "^30.0.1",
		"electron-builder": "^24.13.3",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.2.2",
		"vite": "^5.1.6",
		"vite-plugin-electron": "^0.28.6",
		"vite-plugin-electron-renderer": "^0.14.5",
		"wait-on": "^9.0.3"
	},
	"main": "dist-electron/main.js"
}
